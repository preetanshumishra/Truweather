@page "/locations"
@attribute [Authorize]
@inject HttpClientWrapper Http
@rendermode InteractiveServer

<PageTitle>Locations - Truweather</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Saved Locations</h3>
    <button class="btn btn-primary" @onclick="() => _showAddForm = !_showAddForm">
        @(_showAddForm ? "Cancel" : "Add Location")
    </button>
</div>

<ErrorAlert Message="@_error" OnDismiss="() => _error = null" />

@if (_showAddForm)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">New Location</h5>
            <EditForm Model="_addModel" OnValidSubmit="AddLocation" FormName="addLocation">
                <DataAnnotationsValidator />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Name</label>
                        <InputText class="form-control" @bind-Value="_addModel.LocationName" placeholder="e.g., London" />
                        <ValidationMessage For="() => _addModel.LocationName" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Latitude</label>
                        <InputNumber class="form-control" @bind-Value="_addModel.Latitude" />
                        <ValidationMessage For="() => _addModel.Latitude" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Longitude</label>
                        <InputNumber class="form-control" @bind-Value="_addModel.Longitude" />
                        <ValidationMessage For="() => _addModel.Longitude" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <div class="form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="_addModel.IsDefault" />
                            <label class="form-check-label">Default</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success mt-3" disabled="@_saving">Save</button>
            </EditForm>
        </div>
    </div>
}

@if (_loading)
{
    <LoadingSpinner />
}
else if (_locations is { Count: > 0 })
{
    <div class="row g-3">
        @foreach (var loc in _locations)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title mb-1">
                                    @loc.LocationName
                                    @if (loc.IsDefault)
                                    {
                                        <span class="badge bg-primary ms-1">Default</span>
                                    }
                                </h5>
                                <small class="text-muted">@loc.Latitude, @loc.Longitude</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent d-flex gap-2">
                        @if (!loc.IsDefault)
                        {
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => SetDefault(loc.Id)">Set Default</button>
                        }
                        <button class="btn btn-sm btn-outline-danger ms-auto" @onclick="() => ConfirmDelete(loc)">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted text-center mt-4">No locations saved. Add one to get started.</p>
}

<ConfirmDialog Visible="_deleteTarget != null"
               Title="Delete Location"
               Message="@($"Delete {_deleteTarget?.LocationName}? This cannot be undone.")"
               OnConfirm="DeleteConfirmed"
               OnCancel="() => _deleteTarget = null" />

@code {
    private List<SavedLocationDto>? _locations;
    private LocationFormModel _addModel = new();
    private SavedLocationDto? _deleteTarget;
    private string? _error;
    private bool _loading = true;
    private bool _saving;
    private bool _showAddForm;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocations();
    }

    private async Task LoadLocations()
    {
        try
        {
            _locations = await Http.GetAsync<List<SavedLocationDto>>(ApiEndpoints.WeatherLocations);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task AddLocation()
    {
        _saving = true;
        _error = null;

        try
        {
            var request = new CreateLocationRequest(
                _addModel.LocationName, _addModel.Latitude, _addModel.Longitude, _addModel.IsDefault);
            await Http.PostAsync<SavedLocationDto>(ApiEndpoints.WeatherLocations, request);
            _addModel = new();
            _showAddForm = false;
            await LoadLocations();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _saving = false;
        }
    }

    private async Task SetDefault(int id)
    {
        try
        {
            var loc = _locations?.FirstOrDefault(l => l.Id == id);
            if (loc == null) return;

            var request = new UpdateLocationRequest(loc.LocationName, true);
            await Http.PutAsync<SavedLocationDto>(ApiEndpoints.WeatherLocationDetails(id), request);
            await LoadLocations();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private void ConfirmDelete(SavedLocationDto loc) => _deleteTarget = loc;

    private async Task DeleteConfirmed()
    {
        if (_deleteTarget == null) return;

        try
        {
            await Http.DeleteAsync(ApiEndpoints.WeatherLocationDetails(_deleteTarget.Id));
            _deleteTarget = null;
            await LoadLocations();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _deleteTarget = null;
        }
    }

    private class LocationFormModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Name is required")]
        [System.ComponentModel.DataAnnotations.MaxLength(100)]
        public string LocationName { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Range(-90, 90, ErrorMessage = "Latitude: -90 to 90")]
        public decimal Latitude { get; set; }

        [System.ComponentModel.DataAnnotations.Range(-180, 180, ErrorMessage = "Longitude: -180 to 180")]
        public decimal Longitude { get; set; }

        public bool IsDefault { get; set; }
    }
}
