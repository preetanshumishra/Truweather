@* Displays a single day's forecast *@
<div class="card forecast-card text-center h-100">
    <div class="card-body py-3">
        <small class="text-muted d-block mb-2">@DayName</small>
        <div class="fs-4 fw-bold">@HighTemp&deg;</div>
        <small class="text-muted">@LowTemp&deg;</small>
        <p class="small text-muted mt-2 mb-0">@Condition</p>
    </div>
</div>

@code {
    [Parameter] public string DayName { get; set; } = "";
    [Parameter] public string HighTemp { get; set; } = "--";
    [Parameter] public string LowTemp { get; set; } = "--";
    [Parameter] public string Condition { get; set; } = "";
}
