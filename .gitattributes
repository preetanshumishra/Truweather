# Auto detect text files and normalize line endings to LF
* text=auto

# C# / .NET
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.vbproj text eol=lf
*.vcxproj text eol=lf
*.vcxproj.filters text eol=lf
*.proj text eol=lf
*.projitems text eol=lf

# XAML (MAUI)
*.xaml text eol=lf

# Blazor / Web
*.razor text eol=lf
*.css text eol=lf

# Config
*.json text eol=lf
*.xml text eol=lf
*.config text eol=lf

# Markdown
*.md text eol=lf

# CI/CD
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.so binary
*.dylib binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.zip binary
*.7z binary
*.db binary
*.sqlite binary
*.pdf binary
